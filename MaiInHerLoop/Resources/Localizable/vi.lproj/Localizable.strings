// MARK: - Region Detail — North Risk Briefing

"region.north.riskBriefing" = "Miền Bắc không giải thích trước.\nNúi sạt không báo hiệu. Sông sáng còn yên, trưa đã nuốt đường. Cái lạnh kéo dài cả tháng.\nNgười ở đây chuẩn bị sớm không phải vì lo lắng — mà vì đất đã dạy họ chuyện gì xảy ra khi không kịp.";

"region.north.sections.1.title" = "ĐẤT TỰ DI CHUYỂN";
"region.north.sections.1.content" = "Đường đèo nối mọi nơi — và biến mất trong vài giờ. Lũ quét dồn qua thung lũng hẹp với tốc độ người đồng bằng không tưởng tượng được.\nBão Yagi, bảy mươi chín phần trăm người chết là do sạt lở. Sườn núi không nứt to trước khi đổ.\nNgười đi đường này quen nhìn trời, nhìn đất, và biết lúc nào phải quay lại.";
"region.north.sections.1.subtitle" = "Sau mưa, đừng tin con đường mình vừa đi qua.";

"region.north.sections.2.title" = "ẨM ĐỐT, LẠNH GIỮ";
"region.north.sections.2.content" = "Mùa nồm, tường nhà rỉ nước. Hơi ẩm chui vào dây điện, ổ cắm, cho đến khi có gì đó cháy.\nMùa đông, nhà đóng kín cửa, đốt than sưởi ấm. Khí CO không có mùi.\nNgười sống qua mùa ở đây tôn trọng thứ mình không nhìn thấy.";
"region.north.sections.2.subtitle" = "Thời tiết bên trong nhà cũng quan trọng không kém.";

"region.north.sections.3.title" = "KHI ĐÈO ĐÓNG, BẠN Ở MỘT MÌNH";
"region.north.sections.3.content" = "Một con đường tắc là cả huyện bị cắt. Hàng hoá không vào, sóng điện thoại mất.\nNgười vùng cao đã sống với nhịp này nhiều đời. Họ trữ gạo, củi, thuốc trước khi mùa đổi.\nĐến lúc người ngoài biết chuyện thì họ đã yên vị rồi.";
"region.north.sections.3.subtitle" = "Người ở đây sống theo lịch. Bạn cũng nên vậy.";

"region.north.sections.4.title" = "VÒNG TRÒN ĐẾN TRƯỚC NHÀ NƯỚC";
"region.north.sections.4.content" = "Uỷ ban thôn, đội xung kích, hàng xóm mang dây — cứu hộ miền Bắc bắt đầu từ người quen.\nHọ căng dây qua sông, đào bới lở đất bằng tay, chia lửa trước khi bộ đội tới.\nNgười sống sót là người đã ở trong vòng tròn đó từ trước.";
"region.north.sections.4.subtitle" = "Vào sớm đi. Cửa đóng khi bão tới.";

// MARK: - Region Detail — Central Risk Briefing

"region.central.riskBriefing" = "Miền Trung nằm giữa biển và núi.\nBão vào từ một phía, lở đất đáp lại từ phía kia. Những thị trấn ở giữa đã sống với chuyện này lâu hơn bất kỳ ai còn nhớ.\nĐiều họ biết không phải là sợ — mà là biết lúc nào phải đi.";

"region.central.sections.1.title" = "ĐỊA HÌNH QUYẾT ĐỊNH TẤT CẢ";
"region.central.sections.1.content" = "Từ bãi biển lên đèo núi chỉ một đoạn ngắn. Phố cổ nằm trong những con kiệt gỗ xây từ đời trước, đẹp nhưng không có đường thoát.\nKhi sông dâng, nó không dâng từ từ. Thủy điện xả lũ giữa đỉnh bão, nước ập tới nhanh hơn bất kỳ dự báo nào.";
"region.central.sections.1.subtitle" = "Ở miền Trung, địa hình không chờ bạn hiểu nó.";

"region.central.sections.2.title" = "NGƯỜI Ở LẠI";
"region.central.sections.2.content" = "Loa phường kêu sơ tán. Nhưng trong nhà còn nguyên đồ đạc.\nMỗi mùa bão, có người chọn ở lại — giữ máy tính, giữ tủ, giữ đàn gà. Nước không hỏi lý do.\nNgười từng trải biết cái gì mua lại được, cái gì thì không.";
"region.central.sections.2.subtitle" = "Không món đồ nào đáng để bạn kẹt lại.";

"region.central.sections.3.title" = "ĐƯỜNG ĐỨT TRƯỚC KHI BÃO TAN";
"region.central.sections.3.content" = "Mưa vừa ngớt thì đường đã sạt. Xe cứu trợ không vào được mấy ngày liền. Điểm phát hàng chật kín người.\nRồi gió Lào tới — nóng khô, hút nước trong người nhanh hơn nóng ẩm.\nNgười có kinh nghiệm đã trữ đồ từ trước khi trời đổi.";
"region.central.sections.3.subtitle" = "Ở miền Trung, bị cô lập đến trước cứu trợ.";

"region.central.sections.4.title" = "CẢNH BÁO TRUYỀN BẰNG GIỌNG NÓI";
"region.central.sections.4.content" = "Loa phường, cờ hiệu, người chạy dọc đường núi. Mạng lưới của già làng, ngư dân, đoàn thanh niên tới từng nhà trước khi điện thoại kịp báo.\nNgười nghe theo là người kịp đi.";
"region.central.sections.4.subtitle" = "Nghe người xung quanh, đừng chờ màn hình.";

// MARK: - Region Detail — South Risk Briefing

"region.south.riskBriefing" = "Miền Nam chạy rất nhanh, và không phải lúc nào cũng chờ bạn kịp thích nghi.\nMưa đổ xuống vài phút là đường đã ngập. Nước rút rồi nhưng cái nóng vẫn còn đó.\nNgười sống quen ở đây không đợi ai nhắc. Họ nhìn trời, nhìn đường, nhìn dòng người — và tự biết điều gì sắp xảy ra.";

"region.south.sections.1.title" = "THÀNH PHỐ XÂY CAO";
"region.south.sections.1.content" = "Sài Gòn không trải rộng, nó chồng lên nhau. Chung cư cao, cầu thang hẹp, tầng trệt kín xe máy, ban công có khung sắt.\nNgười ở đây quen từng góc cầu thang, từng lối đi phụ.\nHọ biết nếu có chuyện, mình sẽ chạy hướng nào.";
"region.south.sections.1.subtitle" = "Luôn biết ít nhất hai đường ra khỏi nơi bạn ngủ.";

"region.south.sections.2.title" = "KHI ĐÁM ĐÔNG DỒN LẠI";
"region.south.sections.2.content" = "Sài Gòn thích tụ lại. Countdown, lễ hội, sự kiện ngoài trời.\nChỉ cần một tối, cả khu phố có thể chật kín người.\nNgười đi qua đám đông vững vàng không phải vì họ gan lì — mà vì họ để ý lối ra từ trước.";
"region.south.sections.2.subtitle" = "Biết cửa thoát ở đâu. Đừng đứng giữa.";

"region.south.sections.3.title" = "NHỮNG GÌ ĐẾN SAU CƠN MƯA";
"region.south.sections.3.content" = "Nước rút rồi.\nNhưng sốt xuất huyết bắt đầu tăng.\nDa viêm vì nước bẩn. Cơ thể mệt vì nóng kéo dài.\nThứ nguy hiểm nhất thường đến khi mọi người đã thở phào.";
"region.south.sections.3.subtitle" = "Đừng lơ là khi trời đã tạnh.";

"region.south.sections.4.title" = "KHU PHỐ HÀNH ĐỘNG TRƯỚC";
"region.south.sections.4.content" = "Lực lượng chính thức sẽ tới.\nNhưng người xuất hiện đầu tiên thường là hàng xóm gõ cửa, người chạy xe hô lên ngoài hẻm, nhóm thanh niên đã tự động giúp nhau trước khi có ai yêu cầu.";
"region.south.sections.4.subtitle" = "Đừng đóng cửa một mình. Ở đây, người ta gọi nhau trước.";

